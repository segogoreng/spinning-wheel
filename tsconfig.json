{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es6", "DOM"],
        "outDir": "dist",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rootDirs": ["."],
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true    
    },
    "include": [
        "src/**/*"
    ]
}